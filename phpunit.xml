<phpunit colors="true"
         convertErrorsToExceptions="true"
         convertNoticesToExceptions="true"
         convertWarningsToExceptions="true"
         processIsolation="false"
         stopOnFailure="false"
         syntaxCheck="true"
         verbose="true"
         bootstrap="tests/Harness.php"
         strict="true">
    <testsuites>
        <testsuite name="Setup">
            <file>tests/Setup/Setup.php</file>
        </testsuite>
        <testsuite name="money">
            <directory>tests/Tests/</directory>
        </testsuite>
        <testsuite name="Teardown">
            <file>tests/Setup/Teardown.php</file>
        </testsuite>
    </testsuites>
</phpunit>
